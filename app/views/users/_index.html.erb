<% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
      <td><%= user.name%></td>
      <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
      <td>フォロー数：<%= link_to user.active_relationships.count, follows_user_path(user) %></td>
      <td>フォロワー数：<%= link_to user.passive_relationships.count, followers_user_path(user) %></td>
      <td><% if user.id != current_user %>
            <% if user.followed_by?(current_user) %>
              <%= link_to "フォロー外す", user_relationships_path(user), method: :delete %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user), method: :post %>
            <% end %>
          <% end %>
      </td>
    </tr>
    <% end %>